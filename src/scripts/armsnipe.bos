MotionControl(pheh)
	{	
	pheh = 1;
	/*spring has an issue with THIS block of code.*/
		while (pheh)
		{              
			IF (ISMOVING)
			{
				bCanAim = TRUE;
				turn forearmr to x-axis <0> speed <90>;
				CALL-SCRIPT shootwalk();
			}
            else
			{ 
			bCanAim = TRUE;
			CALL-SCRIPT stopwalk();
			sleep 120;
			}
		}
	}
	
